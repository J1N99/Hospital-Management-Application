<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/typeOfModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Private: "
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/nameOfHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/typeOfModel"
            android:layout_marginStart="16dp"
            android:text="Hospital: "
            android:textSize="14sp" />



        <TextView
            android:id="@+id/totalKM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameOfHospital"
            android:layout_marginStart="16dp"
            android:text="0.7KM"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/totalKM"
            android:layout_marginStart="16dp"
            android:text="Address"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/addressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:layout_marginStart="16dp"
            android:text="Address Detail"
            android:textSize="14sp" />

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/addressDetail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/horizontalLine"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/map"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
